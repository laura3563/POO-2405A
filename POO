class animal(val calase:String, val genero: Char, val habitar:String,
            val dieta:String, val idade: Int, val voa:Boolean){
    
    fun atacar(bravo: Boolean){
        if(bravo == true){
            println("animal Bravo")
       }else{
            println("animal de boa")} }
            
    fun comer(comendo: Boolean){
        if(comendo == true){
            println("animal comendo")
       }else{
            println("animal dormindo")
       }
   } 
   //exercicio:faça um novo comportamento para seu animal usando uma nova fun
    
}
